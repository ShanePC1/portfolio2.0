<!-- views/grid.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Grid Page</title>
  <!-- <link rel="stylesheet" href="/styles/styles.css"> -->
  <style>
    .grid-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .grid-item {
      width: 150px;
      height: 150px;
      margin: 10px;
      overflow: hidden;
    }

    .grid-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</head>

<body>
  <nav class="navbar">
    <div class="container">
      <a href="/" class="nav-link">Home Page</a>
      <a href="/grid" class="nav-link">Grid</a>
      <a href="/contact" class="nav-link">Contact</a>
    </div>
  </nav>

  <div class="container">
    <h1>Photo Grid</h1>

    <div class="grid-container">
      <% photos.forEach(photo => { %>
        <div class="grid-item">
          <img src="<%= photo.imageUrl %>" alt="<%= photo.description %>">
        </div>
      <% }); %>
    </div>
  </div>

</body>

</html>
